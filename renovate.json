{
	"extends": ["config:base"],
	"regexManagers": [
		{
			"fileMatch": ["\\.(ya?ml)$"],
			"matchStrings": [
				"# ?renovate datasource=(?<datasource>.+?) depName=(?<depName>.+)\\n.+: [\"']?(?<currentValue>.+?)[\"']?\\n"
			]
		}
	],
	"timezone": "Europe/Zurich",
	"schedule": ["before 11am on Monday"],
	"packageRules": [
		{
			"matchPaths": ["charts/*/Chart.yaml"],
			"matchManagers": ["regex"],
			"bumpVersion": "patch"
		}
	]
}
